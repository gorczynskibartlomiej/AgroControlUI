@* @model AgroControlUI.DTOs.FarmData.FieldDto

@{
    ViewData["Title"] = "Edytuj Pole";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Nazwa</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Opis</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>

    <div class="mb-3">
        <label for="SoilType" class="form-label">Rodzaj gleby</label>
        <input type="text" class="form-control" id="SoilType" name="SoilType" value="@Model.SoilType" />
    </div>

    <!-- Mapa do rysowania granic -->
    <div class="mb-3">
        <label class="form-label">Granice pola</label>
        <div id="map" style="height: 400px; border: 1px solid #ccc;"></div>
        <input type="hidden" id="FieldBorder" name="FieldBorder" value="@Model.FieldBorder" />
        <small class="form-text text-muted">Zaznacz granice pola na mapie.</small>
    </div>

    <div class="mb-3">
        <label for="Area" class="form-label">Powierzchnia (ha)</label>
        <input asp-for="Area" class="form-control" type="number" step="0.01" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

<a href="@Url.Action("Index", "Field")" class="btn btn-secondary">Anuluj</a>

<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.css" />

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var map = L.map('map').setView([52.2297, 21.0122], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap'
        }).addTo(map);

        var drawnItems = new L.FeatureGroup();
        map.addLayer(drawnItems);

        var drawControl = new L.Control.Draw({
            draw: {
                polyline: false,
                rectangle: false,
                circle: false,
                marker: false,
                circlemarker: false,
                polygon: {
                    allowIntersection: false,
                    showArea: true,
                    drawError: {
                        color: '#e1e100',
                        message: '<strong>Błąd:</strong> Granice nie mogą się przecinać!'
                    }
                }
            },
            edit: {
                featureGroup: drawnItems
            }
        });
        map.addControl(drawControl);

        function calculateArea(geometry) {
            var areaInMeters = turf.area(geometry);
            return (areaInMeters / 10000).toFixed(2);
        }

        map.on(L.Draw.Event.CREATED, function (e) {
            var layer = e.layer;
            drawnItems.clearLayers();
            drawnItems.addLayer(layer);

            var geoJsonData = layer.toGeoJSON();
            document.getElementById("FieldBorder").value = JSON.stringify(geoJsonData.geometry);

            var area = calculateArea(geoJsonData.geometry);
            document.getElementById("Area").value = area;
        });

        map.on(L.Draw.Event.EDITED, function () {
            var layers = drawnItems.getLayers();
            if (layers.length > 0) {
                var geoJsonData = layers[0].toGeoJSON();
                document.getElementById("FieldBorder").value = JSON.stringify(geoJsonData.geometry);

                var area = calculateArea(geoJsonData.geometry);
                document.getElementById("Area").value = area;
            }
        });

        var fieldBorder = document.getElementById("FieldBorder").value;
        if (fieldBorder) {
            var geoJsonLayer = L.geoJSON(JSON.parse(fieldBorder));
            drawnItems.addLayer(geoJsonLayer);
            map.fitBounds(geoJsonLayer.getBounds());

            var area = calculateArea(JSON.parse(fieldBorder));
            document.getElementById("Area").value = area;
            document.getElementById("Area").readOnly = true;
        }
    });
</script>
 *@