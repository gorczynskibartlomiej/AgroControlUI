@model AgroControlUI.DTOs.FarmData.FieldDto

@{
    ViewData["Title"] = "Usuń pole";
}

<h1>Usuń pole</h1>

<div class="alert alert-warning">
    <strong>Uwaga!</strong> Czy na pewno chcesz usunąć to pole?
</div>

<div>
    <p><strong>Nazwa pola:</strong> @Model.Name</p>
    <p><strong>Powierzchnia:</strong> @Model.Area ha</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
</form>
