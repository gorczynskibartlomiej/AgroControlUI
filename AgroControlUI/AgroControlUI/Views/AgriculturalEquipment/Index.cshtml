@model List<AgroControlUI.DTOs.FarmData.AgriculturalEquipmentDto>

@await Html.PartialAsync("_DeleteConfirmationModal")
<link rel="stylesheet" href="~/css/indexList.css">
<link rel="stylesheet" href="~/css/listOperations.css">

<h1 class="blue">Moje maszyny</h1>

<div id="categories" class="wrapper">
    <p>
        <a asp-action="Create" class="add-btn btn"><img src="~/images/plus-solid.svg" />Dodaj nową maszynę</a>
    </p>
    <div class="table">
        <div class="row header blue" id="headerRow">
            <div class="cell" data-sort="name" onclick="sortByColumn(this)">
                <div class="sort-wrapper">
                    <span class="sort-text">Nazwa maszyny</span>
                    <span class="sort-arrow">▼</span>
                </div>
            </div>
            <div class="cell" data-sort="brand" onclick="sortByColumn(this)">
                <div class="sort-wrapper">
                    <span class="sort-text">Marka</span>
                    <span class="sort-arrow">▼</span>
                </div>
            </div>
            <div class="cell" data-sort="type" onclick="sortByColumn(this)">
                <div class="sort-wrapper">
                    <span class="sort-text">Typ</span>
                    <span class="sort-arrow">▼</span>
                </div>
            </div>
            <div class="cell" data-sort="isActive" onclick="sortByColumn(this)">
                <div class="sort-wrapper">
                    <span class="sort-text">Aktywność</span>
                    <span class="sort-arrow">▼</span>
                </div>
            </div>
            <div class="cell">
                Akcje
            </div>
        </div>
        <div class="row">
            <div class="cell">
                <input type="text" class="search-input" data-search="name" placeholder="Szukaj..." oninput="searchByColumn()" />
            </div>
            <div class="cell">
                <input type="text" class="search-input" data-search="brand" placeholder="Szukaj..." oninput="searchByColumn()" />
            </div>
            <div class="cell">
                <input type="text" class="search-input" data-search="type" placeholder="Szukaj..." oninput="searchByColumn()" />
            </div>
            <div class="cell">
            </div>
            <div class="cell">
            </div>
        </div>
        <div class="list">
        @foreach (var equipment in Model)
        {
            <div class="row">
                <div class="cell name" data-title="Nazwa maszyny">
                    @equipment.Name
                </div>
                <div class="cell brand" data-title="Marka">
                    @equipment.Brand
                </div>
                <div class="cell type" data-title="Typ">
                    @equipment.AgriculturalEquipmentTypeName
                </div>
                <div class="cell isActive" data-title="Aktywność">
                    @equipment.IsActive
                </div>
                <div class="cell" data-title="Akcje">
                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@equipment.Id" class="btn edit-btn"><img src="~/images/edit.svg" />Edytuj</a>
                        <button type="button" class="delete-btn" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="setDeleteUrl('@Url.Action("DeleteConfirmed", new { id = equipment.Id })')">
                            <img src="~/images/delete.svg" />Usuń
                        </button>
                    </div>
                </div>
            </div>
        }

    </div>
    </div>
    <ul class="pagination"></ul>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
<script src="~/js/listOperations.js"></script>
<script src="~/js/deleteModal.js"></script>