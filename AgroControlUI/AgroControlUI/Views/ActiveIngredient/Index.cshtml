@model List<AgroControlUI.DTOs.CropProtectionProducts.ActiveIngredientDto>

<link rel="stylesheet" href="~/css/indexList.css">
<h1 class="blue">Substancje aktywne</h1>

<div class="wrapper">
    <p>
        <a asp-action="Create" class="add-btn btn"><img src="~/images/plus-solid.svg"/>Dodaj substancję aktywną</a>
    </p>
    <div class="table">
        <div class="row header">
            <div class="cell">
                Nazwa substancji aktywnej
            </div>
            <div class="cell">
                Akcje
            </div>
        </div>
        @foreach (var activeIngredient in Model)
        {
            <div class="row">
                <div class="cell" data-title="Nazwa substancji aktywnej">
                    @activeIngredient.Name
                </div>
                <div class="cell" data-title="Akcje">
                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@activeIngredient.Id" class="btn edit-btn"><img src="~/images/edit.svg" />Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@activeIngredient.Id" class="btn delete-btn"><img src="~/images/delete.svg"/>Usuń</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>