@model AgroControlUI.DTOs.FarmData.CropRotationPlannerDto

@{
    ViewData["Title"] = "Usuń plan rotacji";
}

<h1>Usuń plan rotacji</h1>

<div class="alert alert-warning">
    <strong>Uwaga!</strong> Czy na pewno chcesz usunąć ten plan rotacji?
</div>

<div>
    <p><strong>Uprawa:</strong> @Model.CropName</p>
    <p><strong>Rok:</strong> @Model.Year</p>

</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
</form>
