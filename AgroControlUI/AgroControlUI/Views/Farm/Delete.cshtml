@model AgroControlUI.DTOs.FarmData.FarmDto

@{
    ViewData["Title"] = "Farma - Usuń";
}

<h1>@ViewData["Title"]</h1>

<p>Jesteś pewny, że chcesz usunąć farmę <strong>@Model.Name</strong>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Farm")">Anuluj</a>
</form>
