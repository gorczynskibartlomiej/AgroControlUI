@model AgroControlUI.DTOs.FarmData.FarmDto

<link rel="stylesheet" href="~/css/add.css">

<div class="form-container">
    <div class="green-form">
        <form asp-action="Create" method="post">
            <h1>Dodaj gopsodarstwo</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="group">
                <input asp-for="Name" required />
                
                <span class="bar"></span>
                <label asp-for="Name">Nazwa gospodarstwa</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="FarmNumber" required />
                
                <span class="bar"></span>
                <label asp-for="FarmNumber">Numer gospodarstwa</label>
                <span asp-validation-for="FarmNumber" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="YearEstablished" required />
                
                <span class="bar"></span>
                <label asp-for="YearEstablished">Rok założenia</label>
                <span asp-validation-for="YearEstablished" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="Adress" required />
                
                <span class="bar"></span>
                <label asp-for="Adress">Adres</label>
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="PostalCode" required />
                
                <span class="bar"></span>
                <label asp-for="PostalCode">Kod pocztowy</label>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="City" required />
                
                <span class="bar"></span>
                <label asp-for="City">Miejscowość</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="group">
                <textarea asp-for="Description" class="description-field" required></textarea>
                
                <span class="bar"></span>
                <label asp-for="Description">Opis</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" id="TotalArea" name="TotalArea" value="0" />
            <div class="action-buttons">
                <a asp-action="Index" class="cancel-btn">Anuluj</a>
                <button type="submit" class="add-btn">Dodaj</button>
            </div>
        </form>
    </div>
</div>
<script src="~/js/inputLabel.js"></script>