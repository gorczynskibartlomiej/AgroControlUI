@model List<AgroControlUI.DTOs.ReferenceData.UnitDto>

<link rel="stylesheet" href="~/css/indexList.css">

<h1 class="yellow">Jednostki miar</h1>

<div class="wrapper">
    <p>
        <a asp-action="Create" class="add-btn btn"><img src="~/images/plus-solid.svg" />Dodaj jednostkę</a>
    </p>
    <div class="table">
        <div class="row header yellow">
            <div class="cell">
                Nazwa jednostki
            </div>
            <div class="cell">
                Akcje
            </div>
        </div>
        @foreach (var unit in Model)
        {
            <div class="row">
                <div class="cell" data-title="Nazwa jendostki">
                    @unit.Name
                </div>
                <div class="cell" data-title="Akcje">
                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@unit.Id" class="btn edit-btn"><img src="~/images/edit.svg" />Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@unit.Id" class="btn delete-btn"><img src="~/images/delete.svg" />Usuń</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>