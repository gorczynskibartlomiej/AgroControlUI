@model AgroControlUI.DTOs.CropProtectionProducts.CropProtectionProductDto

@{
    ViewData["Title"] = "Usuń produkt ochrony roślin";
}

<h1>Usuń produkt ochrony roślin</h1>

<div class="alert alert-warning">
    <strong>Uwaga!</strong> Czy na pewno chcesz usunąć ten produkt?
</div>

<div>
    <p><strong>Nazwa:</strong> @Model.Name</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
</form>
