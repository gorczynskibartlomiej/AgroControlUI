@model AgroControlUI.DTOs.ReferenceData.CropDto

<h1>Delete Crop</h1>

<p>Are you sure you want to delete this crop?</p>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>

