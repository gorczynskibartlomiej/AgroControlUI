@model AgroControlUI.DTOs.ReferenceData.AgriculturalEquipmentTypeDto

@{
    ViewData["Title"] = "Edytuj rodzaj sprzętu rolniczego";
}

<h1>Edytuj rodzaj sprzętu rolniczego</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Nazwa</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
</form>
