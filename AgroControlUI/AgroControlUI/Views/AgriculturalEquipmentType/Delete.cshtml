@model AgroControlUI.DTOs.ReferenceData.AgriculturalEquipmentTypeDto

@{
    ViewData["Title"] = "Usuń rodzaj sprzętu rolniczego";
}

<h1>Usuń rodzaj sprzętu rolniczego</h1>

<div class="alert alert-warning">
    <strong>Uwaga!</strong> Czy na pewno chcesz usunąć ten rodzaj sprzętu rolniczego?
</div>

<div>
    <p><strong>Nazwa:</strong> @Model.Name</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
</form>
