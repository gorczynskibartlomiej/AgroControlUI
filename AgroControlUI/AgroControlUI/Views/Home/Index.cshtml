        }

        .category:nth-child(3) .tile {
            background-color: #fff9e7; /* Jasny żółty */
            border-color: #E0C465;
        }

        .category:nth-child(4) .tile {
            background-color: #fceeef; /* Jasny czerwony */
            border-color: #E06570;
        }

        /* Efekt hover z cieniem */
        .tile:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2), 0 0 20px currentColor; /* Dodaje podświetlenie w kolorze ramki */
            background-color: rgba(255, 255, 255, 0.9); /* Subtelnie jaśniejsze tło */
        }

        /* Obrazki w kafelkach */
        .tile img {
            width: 80px;
            height: 80px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        /* Tekst w kafelkach */
        .tile h4 {
            font-size: 1.2rem;
            margin: 0;
            font-weight:bold;
        }
        .tile a
        {
            text-decoration:none;
        }

