            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            overflow: hidden;
            height: 100%; 
        }

            .category:nth-child(1){
                border: 3px solid #6576E0;
            }

            .category:nth-child(2){
                border: 3px solid #28A745;
            }

            .category:nth-child(3){
                border: 3px solid #E0C465;
            }

            .category:nth-child(4){
                border: 3px solid #E06570;
            }
            /* Kolory nagłówków kategorii */
            .category:nth-child(1) h3 {
                color: #6576E0; 
            }

            .category:nth-child(2) h3 {
                color: #28A745; /* Zielony dla upraw */
            }

            .category:nth-child(3) h3 {
                color: #E0C465; /* Żółty dla magazynu */
            }

            .category:nth-child(4) h3 {
                color: #E06570; /* Czerwony dla analiz */
            }

            /* Nagłówek kategorii */
            .category h3 {
                font-size: 2rem;
                text-align: center;
                margin-bottom: 20px;
                border-bottom: 3px solid currentColor;
                padding-bottom: 10px;
                font-weight: bold;
            }

        /* Kafelki */

        .tile {
            background-color: #f9f9f9; /* Domyślne tło */
            border: 2px solid #ddd;
            border-radius: 10px;
            text-align: center;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
            height: auto; /* Wszystkie kafelki będą kwadratowe */
            min-height: 175px;
            justify-content:center;
            align-content:center;
        }

        /* Dziedziczenie kolorów kategorii */
        .category:nth-child(1) .tile {
            background-color: #eef1fc;
            ; /* Jasny niebieski */
            border-color: #6576E0; /* Kolor ramki */
        }

        .category:nth-child(2) .tile {
            background-color: #e9f7ec; /* Jasny zielony */
