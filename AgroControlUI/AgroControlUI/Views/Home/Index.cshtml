    <style>

        /* Kategorie */
        .category {
            background-color: white; 
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            overflow: hidden;
            height: 100%; 
        }

            .category-wraper:nth-child(1) .category {
                border: 3px solid #6576E0;
            }

            .category-wraper:nth-child(2) .category {
                border: 3px solid #28A745;
            }

            .category-wraper:nth-child(3) .category {
                border: 3px solid #E0C465;
            }

            .category-wraper:nth-child(4) .category {
                border: 3px solid #E06570;
            }
            /* Kolory nagłówków kategorii */
            .category-wraper:nth-child(1) .category h3 {
                color: #6576E0; 
            }

            .category-wraper:nth-child(2) .category h3 {
                color: #28A745; /* Zielony dla upraw */
            }

            .category-wraper:nth-child(3) .category h3 {
                color: #E0C465; /* Żółty dla magazynu */
            }

            .category-wraper:nth-child(4) .category h3 {
                color: #E06570; /* Czerwony dla analiz */
            }

            /* Nagłówek kategorii */
            .category h3 {
                font-size: 2rem;
                text-align: center;
                margin-bottom: 20px;
                border-bottom: 3px solid currentColor;
                padding-bottom: 10px;
                font-weight: bold;
            }

        /* Kafelki */

        .tile {
            background-color: #f9f9f9; /* Domyślne tło */
            border: 2px solid #ddd;
            border-radius: 10px;
            text-align: center;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);

            position: relative; /* Kontekst pozycjonowania dla a */
            padding: 0; /* Brak marginesów wewnętrznych */
            overflow: hidden;

            transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
            height: auto; /* Wszystkie kafelki będą kwadratowe */
            min-height: 175px;
            justify-content:center;
            align-content:center;
        }

        /* Dziedziczenie kolorów kategorii */
        .category-wraper:nth-child(1) .category .tile {
            background-color: #eef1fc;
            border-color: #6576E0; /* Kolor ramki */
        }

        .category-wraper:nth-child(2) .category .tile {
            background-color: #e9f7ec; /* Jasny zielony */
            border-color: #28A745;
        }

        .category-wraper:nth-child(3) .category .tile {
            background-color: #fff9e7; /* Jasny żółty */
            border-color: #E0C465;
        }

        .category-wraper:nth-child(4) .category .tile {
            background-color: #fceeef;
            border-color: #E06570;
        }

            .category-wraper:nth-child(1) .category .tile:hover {
            transform: translateY(-5px);
            box-shadow: 0px 0px 20px 5px rgba(101, 118, 224, 0.88);
        
        }

        .category-wraper:nth-child(2) .category .tile:hover {
            transform: translateY(-5px);
            box-shadow: 0px 0px 20px 5px rgba(40, 167, 69, 0.65);
        }

        .category-wraper:nth-child(3) .category .tile:hover {
            transform: translateY(-5px);
            box-shadow: 0px 0px 20px 5px rgba(224, 196, 101, 0.88);  
        }

        .category-wraper:nth-child(4) .category .tile:hover {
            transform: translateY(-5px);
            box-shadow: 0px 0px 20px 5px rgba(224, 101, 112, 0.88); 
        }
        /* Obrazki w kafelkach */
        .tile img {
            width: 80px;
            height: 80px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        /* Tekst w kafelkach */
        .tile h4 {
            font-size: 1.2rem;
            margin: 0;
            font-weight:bold;
        }
        .tile a
        {
            position: absolute; /* Absolutne pozycjonowanie względem .tile */
            top: 0;
            left: 0;
            width: 100%; /* Rozciąga link na całą szerokość kafelka */
            height: 100%; /* Rozciąga link na całą wysokość kafelka */
            display: flex; /* Użycie flexboxa do centrowania zawartości */
            flex-direction: column; /* Ustawienie kolumnowego układu */
            align-items: center; /* Wyśrodkowanie obrazka i tekstu h4 w poziomie */
            justify-content: center; /* Wyśrodkowanie obrazka i tekstu h4 w pionie */
