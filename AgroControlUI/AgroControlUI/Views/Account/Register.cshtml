@model AgroControlUI.DTOs.Account.RegisterModelDto

<style>
    /* Header styling */
    h1 {
        color: #4caf50; /* Zielony kolor */
        font-size: 2.5rem;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Container for login form */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    /* Form container (Login form in a box) */
    .login-form {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 100%;
        max-width: 400px;
        margin-top: 20px;
    }

        .login-form h1 {
            font-size: 2rem;
            color: #4caf50;
            text-align: center;
            margin-bottom: 25px;
        }

    /* Form styles */
    .group {
        position: relative;
        margin-bottom: 45px;
    }

    input {
        font-size: 18px;
        padding: 10px 10px 10px 5px;
        display: block;
        width: 100%;
        border: none;
        border-bottom: 2px solid #757575;
        background-color: transparent;
        transition: border-color 0.3s;
    }

        input:focus {
            outline: none;
            border-color: #4caf50;
        }

    /* LABEL Styling */
    label {
        color: #999;
        font-size: 18px;
        font-weight: normal;
        position: absolute;
        pointer-events: none;
        left: 5px;
        top: 10px;
        transition: 0.2s ease all;
    }

    input:focus ~ label, input:valid ~ label {
        top: -20px;
        font-size: 14px;
        color: black;
    }

    /* Bottom bars (focus effect) */
    .bar {
        position: relative;
        display: block;
        width: 100%;
    }

        .bar:before, .bar:after {
            content: '';
            height: 2px;
            width: 0;
            bottom: 1px;
            position: absolute;
            background: #4caf50;
            transition: 0.2s ease all;
        }

        .bar:before {
            left: 50%;
        }

        .bar:after {
            right: 50%;
        }

    input:focus ~ .bar:before, input:focus ~ .bar:after {
        width: 50%;
    }

    /* Highlighting effect for input */
    .highlight {
        position: absolute;
        height: 60%;
        width: 100px;
        top: 25%;
        left: 0;
        pointer-events: none;
        opacity: 0.5;
    }

    input:focus ~ .highlight {
        animation: inputHighlighter 0.3s ease;
    }

    @@keyframes inputHighlighter {
        from {
            width: 0;
            background: transparent;
        }

        to {
            width: 100%;
            background: transparent;
        }
    }

    /* Button styling */
    .btn {
        background-color: #4caf50;
        color: #fff;
        border: none;
        padding: 12px 20px;
        font-size: 1.1rem;
        width: 100%;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #45a049;
        }

    /* Validation message styling */
    .text-danger {
        font-size: 0.9rem;
        color: red;
        margin-top: 5px;
    }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .login-form {
            padding: 20px;
            margin: 20px;
        }

        h1 {
            font-size: 2rem;
        }

        input {
            font-size: 0.95rem;
        }

        .btn {
            font-size: 1rem;
        }
    }

    .login-form .btn:focus {
        outline: none;
        box-shadow: 0 0 5px 2px rgba(76, 175, 80, 0.8);
    }

</style>
<div class="login-container">
    <div class="login-form">
        <form asp-action="Register" method="post">
            <h1>Rejestracja</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="group">
                <input asp-for="FirstName" required/>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label asp-for="FirstName">Imię</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="LastName" required />
                <span class="highlight"></span>
                <span class="bar"></span>
                <label asp-for="LastName">Nazwisko</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="Email" required />
                <span class="highlight"></span>
                <span class="bar"></span>
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="group">
                <input asp-for="Password" required type="password" />
                <span class="highlight"></span>
                <span class="bar"></span>
                <label asp-for="Password">Hasło</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="ReapeatedPassword" required type="password" />
                <span class="highlight"></span>
                <span class="bar"></span>
                <label asp-for="ReapeatedPassword">Powtórz hasło</label>
                <span asp-validation-for="ReapeatedPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zarejestruj</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
