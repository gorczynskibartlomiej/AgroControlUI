@model AgroControlUI.DTOs.FarmData.EmployeeDto

<link rel="stylesheet" href="~/css/add.css">

<div class="form-container">
    <div class="blue-form">
        <form asp-action="Edit" method="post">
            <h1>Edytuj pracownika</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="group">
                <input asp-for="FirstName" required value="@Model.FirstName"/>
                <span class="bar"></span>
                <label asp-for="FirstName">Imię</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="LastName" required value="@Model.LastName" />
                <span class="bar"></span>
                <label asp-for="LastName">Nazwisko</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="PhoneNumber" />
                <span class="bar"></span>
                <label asp-for="PhoneNumber">Numer telefonu</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="group">
                <label class="switch">
                    <input asp-for="IsActive" type="checkbox">
                    <span class="slider"></span>
                </label>
                <span class="switch-label">Aktywność</span>
            </div>
            <div class="action-buttons">
                <a asp-action="Index" class="cancel-btn">Anuluj</a>
                <button type="submit" class="add-btn">Zapisz</button>
            </div>
        </form>
    </div>
</div>
<script src="~/js/inputLabel.js"></script>