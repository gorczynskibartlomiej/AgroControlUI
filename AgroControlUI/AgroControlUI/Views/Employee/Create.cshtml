@model AgroControlUI.DTOs.FarmData.EmployeeDto

<link rel="stylesheet" href="~/css/add.css">

<div class="form-container">
    <div class="green-form">
        <form asp-action="Create" method="post">
            <h1>Dodaj pracownika</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="group">
                <input asp-for="FirstName" required />
                <span class="bar"></span>
                <label asp-for="FirstName">Imię</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="LastName" required />
                <span class="bar"></span>
                <label asp-for="LastName">Nazwisko</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="Cost" required />
                <span class="bar"></span>
                <label asp-for="Cost">Koszt</label>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="IsActive" type="checkbox" />
                <label asp-for="IsActive">Aktywny</label>
            </div>
            <div class="action-buttons">
                <a asp-action="Index" class="cancel-btn btn">Anuluj</a>
                <button type="submit" class="add-btn btn">Dodaj</button>
            </div>
        </form>
    </div>
</div>